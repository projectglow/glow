{
  "new_cluster": {
    "spark_version": "7.6.x-scala2.12",
    "node_type_id": "Standard_DS3_v2",
    "num_workers": 2,
    "docker_image": {
        "url": "wbrandler/vep:latest" 
    },
    "init_scripts": [
      {
        "dbfs": {
          "destination": "dbfs:/glow-init-scripts/bedtools.sh"
        }
      },
      {
        "dbfs": {
          "destination": "dbfs:/glow-init-scripts/htslib_init.sh"
        }
      },
      {
        "dbfs": {
          "destination": "dbfs:/glow-init-scripts/chain.sh"
        }
      }
    ]
  },
  "libraries": [
    {
      "maven": {
        "coordinates": "io.projectglow:glow-spark3_2.12:1.0.1"
      }
    },
    {
      "pypi": {
        "package": "glow.py==1.0.1"
      }
    },
    {
      "pypi": {
        "package": "mlflow"
      }
    }
  ],
  "timeout_seconds": 3600
}
